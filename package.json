{
  "name": "near-sign-verify",
  "version": "0.4.5",
  "description": "Creates and validates NEAR signatures for API authentication.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --minify --sourcemap",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "size": "size-limit",
    "lint": "eslint src --ext .ts",
    "fmt": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
    "fmt:check": "prettier --check '**/*.{js,jsx,ts,tsx,json}'",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "near",
    "wallet",
    "signature",
    "authentication"
  ],
  "author": "efiz.near",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elliotBraem/near-sign-verify.git"
  },
  "bugs": {
    "url": "https://github.com/elliotBraem/near-sign-verify/issues"
  },
  "homepage": "https://github.com/elliotBraem/near-sign-verify#readme",
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@scure/base": "^2.0.0",
    "@zorsh/zorsh": "^0.3.3"
  },
  "devDependencies": {
    "near-api-js": "^5.1.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^20.19.24",
    "@vitest/coverage-v8": "^1.6.1",
    "dotenv": "^16.6.1",
    "eslint": "^8.57.1",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "size-limit": "^11.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
