{
  "name": "near-sign-verify",
  "version": "0.2.0",
  "description": "Creates and validates NEAR signatures for API authentication.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm,umd --dts --global-name NearSignVerify",
    "dev": "tsup src/index.ts --format cjs,esm,umd --dts --global-name NearSignVerify --watch",
    "lint": "eslint src --ext .ts",
    "fmt": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
    "fmt:check": "prettier --check '**/*.{js,jsx,ts,tsx,json}'",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "near",
    "wallet",
    "signature",
    "authentication"
  ],
  "author": "elliotBraem",
  "license": "MIT",
  "dependencies": {
    "@noble/hashes": "^1.8.0",
    "borsh": "^2.0.0",
    "bs58": "^5.0.0",
    "elliptic": "^6.6.1",
    "tweetnacl": "^1.0.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/elliptic": "^6.4.18",
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^1.2.1",
    "dotenv": "^16.5.0",
    "eslint": "^8.56.0",
    "near-api-js": "^5.1.1",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vi-fetch": "^0.8.0",
    "vitest": "^1.2.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
